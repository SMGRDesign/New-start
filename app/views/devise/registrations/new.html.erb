<div class="row'">
  <div class="col-md-4 col-md-offset-4">
    <div class="well">
    <h2 style="color:black">Sign up</style></h2>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    
    <div class="field form-group" >
      <%= f.label :email do %><br />
      <span style="color:black">email </style></span>
      <% end %>
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>
    
    <div class="field form-group">
      <%= f.label :password do %>
      <span style="color:black">Password (8 characters minimum) </style></span>
      <% end %>
      <% if @validatable %>
      
      
     
      
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>
    
    <div class="field form-group">
      <%= f.label :password_confirmation do %><br />
      <span style="color:black">password_confirmation</style></span>
      <% end %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>
    
    <div class="actions form-group">
      <%= f.submit "Sign up", class: "btn btn-success" %>
    </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

